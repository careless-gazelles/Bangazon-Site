@model BangazonSite.Models.OrderViewModels.OrderDetailViewModel

@{
    ViewData["Title"] = "Delete";
}
<!--Ollie 9/1-->
<h2>Delete</h2>

<h3>Are you sure you want to delete this order and all items in it?</h3>
<div>
    <h4>Order @Html.DisplayFor(model => model.Order.OrderId)</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@Html.DisplayFor(model => product.Title)</td>
                    <td>@Html.DisplayFor(model => product.Price)</td>
                </tr>
                Model.Total += product.Price;
            }
        </tbody>
    </table>

    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>