@model BangazonSite.Models.OrderViewModels.OrderDetailViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Complete Order @Html.DisplayFor(model => model.Order.OrderId)</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Order</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Order.OrderId" />
    <input type="hidden" asp-for="Order.DateCreated"/>
        <div class="form-group">
            <label asp-for="Order.PaymentTypeId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="Order.PaymentTypeId" class="form-control" asp-items="ViewBag.PaymentTypeId"></select>
                <span asp-validation-for="Order.PaymentTypeId" class="text-danger"></span>
            </div>
            <p>@Html.DisplayFor(model => model.Order.DateCreated)</p>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Done" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
